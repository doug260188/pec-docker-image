pipeline {
    agent any

    stages {
        stage('Build Image') {
            steps {
                script {
                    //Baixando dockerfile
                    sh 'wget https://github.com/doug260188/pec-docker-image/blob/main/Dockerfile'

                    //Construindo imagem
                    sh 'docker build -t doug260188/debina:latest .'
                }
            }
        

        }

        stage('Run Container') {
            steps {
                sh 'export PATH=$PATH:/usr/bin'
                sh 'docker-compose up -d https://raw.githubusercontent.com/doug260188/pec-docker-image/main/docker-compose.yml'
            }
        }
    }
                
}
